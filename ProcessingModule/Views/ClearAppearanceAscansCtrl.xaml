<Window x:Class="ProcessingModule.Views.ClearAppearanceAscansCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessingModule.Views"
             mc:Ignorable="d" 
             Height="200" Width="400">
    <Grid>
        <Button x:Name="ButtonOk" Content="Ok" HorizontalAlignment="Left" Margin="198,133,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="ButtonCancel" Content="Cancel" HorizontalAlignment="Left" Margin="278,133,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Количество измерений для галочки" HorizontalAlignment="Left" Margin="23,54,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ComboBoxNumberOfAppearanceAscans" HorizontalAlignment="Left" Margin="256,58,0,0" VerticalAlignment="Top" Width="120"
                  ItemsSource="{Binding Numbers}" SelectedValue="{Binding NumberOfAppearanceAscans}"/>

    </Grid>
</Window>
