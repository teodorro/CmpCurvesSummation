<UserControl x:Class="ProcessingModule.Views.SummedScan.ChangeMaxVelocityCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessingModule.Views.SummedScan"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label Content="Максимальная скорость" HorizontalAlignment="Left" Margin="10,5,10,5" VerticalAlignment="Bottom"/>
            <Label x:Name="MaxVelocityLabel"  HorizontalAlignment="Left" Margin="10,5,10,5" VerticalAlignment="Bottom"
               Content="{Binding MaxVelocity}" />
        </StackPanel>
        <Slider  Margin="10,5,10,0" VerticalAlignment="Top" Maximum="{Binding PlotMaxVelocity}" Minimum="{Binding PlotMinVelocity}"
                 Value="{Binding MaxVelocity}" Grid.Row="1" SmallChange="0.0001" LargeChange="0.001"/>
    </Grid>
</UserControl>
