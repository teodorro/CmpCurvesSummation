<UserControl x:Class="ProcessingModule.Views.SummedScan.ChangeMaxVelocityCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessingModule.Views.SummedScan"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label Content="Максимальная скорость" HorizontalAlignment="Left" Margin="20,10,0,5" VerticalAlignment="Bottom"
               Grid.Row="1"/>
        <Label x:Name="MaxVelocityLabel"  HorizontalAlignment="Left" Margin="200,10,0,5" VerticalAlignment="Bottom"
               Content="{Binding MaxVelocity}" Grid.Row="1"/>
        <Slider  Margin="10,12,10,0" VerticalAlignment="Top" Maximum="{Binding MaximumNumberOfAscans}" Minimum="{Binding MinVelocity}"
                 Value="{Binding MaxVelocity}" Grid.Row="2" SmallChange="0.0001" LargeChange="0.001"/>
    </Grid>
</UserControl>
