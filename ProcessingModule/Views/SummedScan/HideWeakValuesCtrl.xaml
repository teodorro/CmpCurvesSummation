<UserControl x:Class="ProcessingModule.Views.SummedScan.HideWeakValuesCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessingModule.Views.SummedScan"
             xmlns:summedScan="clr-namespace:ProcessingModule.ViewModels.SummedScan"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Control.DataContext>
        <summedScan:HideWeakValuesViewModel/>
    </Control.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Slider Height="25" LargeChange="0.01" Margin="5,5,5,5"
                Value="{Binding WeakValue}" 
                SmallChange="0.0001" Maximum="1" />
        <Label Grid.Column="1" HorizontalAlignment="Left" Margin="5,5,5,10"
               VerticalAlignment="Center" HorizontalContentAlignment="Left"
               Content="{Binding WeakValue}"/>
    </Grid>
</UserControl>
