<UserControl x:Class="ProcessingModule.Views.SummedScan.HideWeakValuesCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessingModule.Views.SummedScan"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label Content="Cлабое значение" HorizontalAlignment="Left" Margin="10,5,10,5" VerticalAlignment="Bottom"/>
            <Label x:Name="WeakValueLabel"  HorizontalAlignment="Left" Margin="10,5,10,5" VerticalAlignment="Bottom"
                   Content="{Binding WeakValue}"/>
        </StackPanel>
        <Slider  Margin="10,5,10,0" VerticalAlignment="Top" Grid.Row="1"  LargeChange="0.5"
                 Value="{Binding WeakValue}" 
                 Maximum="{Binding MaxValue}"/>
    </Grid>
</UserControl>
