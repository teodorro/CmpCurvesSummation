<UserControl x:Class="ProcessingModule.Views.SummedScan.RaiseToPowerCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessingModule.Views.SummedScan"
             xmlns:summedScan="clr-namespace:ProcessingModule.ViewModels.SummedScan"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Control.DataContext>
        <summedScan:RaiseToPowerViewModel/>
    </Control.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Slider Height="25" Maximum="20" VerticalAlignment="Center" Margin="5,5,5,5"
                Value="{Binding Power}" />
        <Label Grid.Column="1" HorizontalAlignment="Left" Margin="5,5,5,10"
               VerticalAlignment="Center" HorizontalContentAlignment="Left"
               Content="{Binding Power}"/>
        
    </Grid>
</UserControl>
