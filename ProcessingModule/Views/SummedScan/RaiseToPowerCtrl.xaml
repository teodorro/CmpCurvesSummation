<UserControl x:Class="ProcessingModule.Views.SummedScan.RaiseToPowerCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessingModule.Views.SummedScan"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label Content="Возведение в степень" HorizontalAlignment="Left" Margin="10,5,10,5" VerticalAlignment="Bottom"/>
            <Label x:Name="PowerLabel"  HorizontalAlignment="Left" Margin="10,5,10,5" VerticalAlignment="Bottom"
                   Content="{Binding Power}"/>
        </StackPanel>
        <Slider  Margin="10,5,10,0" VerticalAlignment="Top" 
                 Value="{Binding Power}" Grid.Row="1" Maximum="10" LargeChange="0.5"/>
    </Grid>
</UserControl>
