<UserControl x:Class="ProcessingModule.Views.ProcessingCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessingModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Текущая последовательность обработок" VerticalAlignment="Bottom" FontWeight="Bold" />
        <DataGrid x:Name="ProcessingListDataGrid" Grid.Row="1" CanUserAddRows="False" CanUserSortColumns="False"
                  ItemsSource="{Binding ProcessingRowList}" >
            <DataGrid.ItemContainerStyle>
                <Style TargetType="DataGridRow">
                    <EventSetter Event="MouseDoubleClick" Handler="ProcessingListDataGrid_DoubleClick"></EventSetter>
                </Style>

            </DataGrid.ItemContainerStyle>
        </DataGrid>
    </Grid>
</UserControl>
