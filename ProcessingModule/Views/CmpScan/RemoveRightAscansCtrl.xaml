<UserControl x:Class="ProcessingModule.Views.CmpScan.RemoveRightAscansCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessingModule.Views"
             xmlns:viewModels="clr-namespace:ProcessingModule.ViewModels"
             xmlns:cmpScan="clr-namespace:ProcessingModule.ViewModels.CmpScan"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Control.DataContext>
        <cmpScan:RemoveRightAscansViewModel x:Name="removeRightAscansViewModel"></cmpScan:RemoveRightAscansViewModel>
    </Control.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Slider  Height="25" VerticalAlignment="Center" Margin="5,5,5,5"
                 Maximum="{Binding MaximumNumberOfAscans}"
                 Value="{Binding NumberOfAscans}"/>
        <Label Grid.Column="1" HorizontalAlignment="Left" Margin="5,5,5,10"
               VerticalAlignment="Center" HorizontalContentAlignment="Left"
               Content="{Binding NumberOfAscans}"/>
    </Grid>
</UserControl>
