<Window x:Class="ProcessingModule.Views.StraightenSynchronizationLineWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessingModule.Views"
             mc:Ignorable="d" 
             Height="200" Width="400">
    <Grid>
        <Button x:Name="ButtonOk" Content="ОК" HorizontalAlignment="Left" Margin="198,133,0,0" VerticalAlignment="Top" Width="75" Click="ButtonOk_Click"/>
        <Button x:Name="ButtonCancel" Content="Отмена" HorizontalAlignment="Left" Margin="278,133,0,0" VerticalAlignment="Top" Width="75" Click="ButtonCancel_Click"/>
        <Label Content="Минимальная амплитуда для проверки" HorizontalAlignment="Left" Margin="23,54,0,0" VerticalAlignment="Top"/>

        <TextBox HorizontalAlignment="Left" Height="23" Margin="256,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                 Text="{Binding MinAmplitudeToCheck}"/>
    </Grid>
</Window>
