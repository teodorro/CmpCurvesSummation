<UserControl x:Class="CmpCurvesSummation.Views.ToolbarCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CmpCurvesSummation.Views"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="300">
    <!-- <Control.CommandBindings> -->
    <!--     <CommandBinding Command="Open" Executed="OpenFile"></CommandBinding> -->
    <!-- </Control.CommandBindings> -->
    <UserControl.Resources>
        <Image x:Key="PlayImage" Source="../Resources/Play-1-Normal-icon.png"/>
        <Image x:Key="OpenFileImage" Source="../Resources/Open-icon.png"/>
    </UserControl.Resources>
    <Grid>
        <ToolBar>
            <Button x:Name="ButtonOpenFile" Content="{StaticResource OpenFileImage}"   Click="ButtonOpenFile_Click"/>

            <Button x:Name="ButtonSummation" Content="{StaticResource PlayImage}"  
                    IsEnabled="{Binding ManualSummationPossible}" Click="ButtonSummation_Click"  />
        </ToolBar> 

    </Grid>
</UserControl>
