<Window x:Class="IntegratedScanModule.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:IntegratedScanModule.Views"
        xmlns:viewModels="clr-namespace:SummedScanModule.ViewModels"
        mc:Ignorable="d"
        WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True"
        Width="300" Height="30" Loaded="Window_Loaded">

    <Window.DataContext>
        <viewModels:ProgressWindowViewModel/>
    </Window.DataContext>

    <Grid >
        <ProgressBar Name="_progressBar" Value="{Binding Percent}" Margin="4"/>
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="{Binding LoadingText}"></TextBlock>
    </Grid>
</Window>