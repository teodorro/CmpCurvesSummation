<UserControl x:Class="ToolbarModule.Views.ToolbarCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolbarModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Control.CommandBindings>
        <CommandBinding Command="Open" Executed="OpenFile"></CommandBinding>
    </Control.CommandBindings>
    <Grid>
        <ToolBar>
            <Button x:Name="ButtonOpenFile" Content="Open" Height="50" VerticalAlignment="Top" Width="50"
                    Command="Open" />
            <Button x:Name="ButtonSaveFle" Content="Save" Height="50" VerticalAlignment="Top" Width="50"/>

        </ToolBar> 

    </Grid>
</UserControl>
